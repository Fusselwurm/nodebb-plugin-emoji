{
    "id": "nodebb-plugin-emoji",
    "name": "NodeBB Emoji",
    "description": "Emoji for NodeBB, as seen on http://www.emoji-cheat-sheet.com",
    "url": "https://github.com/julianlam/nodebb-plugin-emoji",
    "library": "./index.js",
    "staticDirs": {
        "emoji-images": "node_modules/emoji-images/pngs",
        "emoji-css": "assets"
    },
    "css": [
        "emoji-css/style.css"
    ],
    "hooks": [
        { "hook": "filter:post.parse", "method": "addEmoji" }
    ]
}